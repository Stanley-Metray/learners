doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Profile
    link(rel='stylesheet', href='profile.css')
  body
    .container
      table
        tbody
          tr
            td Username
            td #{User.userName}
          tr
            td Email
            td #{User.email}
          tr
            td Purchased courses
            td #{User.courses}
      div#btn 
        a#back(href='/') Home
        a#logout(href='/logout') Logout